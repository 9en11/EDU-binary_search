#define kyra   1000000007
#define N 300003
const long long INF=1e18;
int n;
int k;
int x[N];
int v[N];

bool good(int m)
 { int tc=k;
    
    int i=1;
    int last=x[0];
    tc-=1;
    int d=x[1];
     while(i<n and tc>0)
       { 
           while(i< n and x[i]-last<m)
              {
                i++;

              }
              if(i<n)
              {
              tc-=1;
              last=x[i];
              i++;
              }



       }
       return tc==0;
   
 }


void solve()
{ 
  cin>>n>>k;
  rep(i,0,n)
     {
      cin>>x[i];
     }
    
int l=0;
int r=1e15;
while(r>l+1)
   {
     int m=(l+r)/2;
     if(good(m))
       {
         l=m;
       }
       else
         r=m;
   }
cout<<l;
  
}

